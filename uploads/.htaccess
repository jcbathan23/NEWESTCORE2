# Prevent direct access to PHP files in uploads
<Files ~ "\.php$">
    Order allow,deny
    Deny from all
</Files>

# Only allow image files
<FilesMatch "\.(jpg|jpeg|png|gif|webp)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# Deny everything else
<FilesMatch ".*">
    Order allow,deny
    Deny from all
</FilesMatch>
